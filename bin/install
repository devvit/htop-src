#!/usr/bin/env sh

install() {
  version=$2
  install_dir=$3

  build_dir=$(mktemp -d)
  cd $build_dir

  # git clone https://github.com/mscalora/htop
  git clone --depth 1 --recursive https://github.com/htop-dev/htop
  cd htop
  sh autogen.sh
  ./configure --prefix=$install_dir --disable-unicode
  make install || exit 1
}

install $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
